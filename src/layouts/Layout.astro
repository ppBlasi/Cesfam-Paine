---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import '../styles/global.css';

const { title } = Astro.props;

---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <button
      id="global-back-button"
      type="button"
      class="fixed left-4 bottom-4 z-50 rounded-full bg-black px-4 py-2 text-sm font-semibold text-white shadow-lg backdrop-blur transition hover:bg-black/70 focus:outline-none focus:ring-2 focus:ring-[#321355] focus:ring-offset-2"
    >
      ‚Üê Volver
    </button>
    <main>
      <slot />
    </main>
    <Footer />
    <script>
      const backBtn = document.getElementById("global-back-button");
      if (backBtn) {
        backBtn.addEventListener("click", () => {
          if (window.history.length > 1) {
            window.history.back();
          } else {
            window.location.href = "/";
          }
        });
      }
    </script>
  </body>
</html>

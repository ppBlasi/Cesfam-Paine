---
import Layout from "../../layouts/Layout.astro";
import { prisma } from "../../lib/prisma";

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect("/login");
}

if (!user.isWorker && !user.isAdmin) {
  return Astro.redirect("/");
}

const worker = await prisma.trabajador.findFirst({
  where: { rut_trabajador: user.rut },
  include: {
    especialidad: {
      select: {
        nombre_especialidad: true,
        id_especialidad: true,
      },
    },
  },
});

if (!worker) {
  return Astro.redirect(user.isAdmin ? "/admin" : "/perfil");
}

const specialtyName = worker.especialidad?.nombre_especialidad ?? "Sin especialidad";
const cargoLabel =
  worker.cargo === "ADMIN"
    ? "Administrador"
    : worker.cargo === "RECEPCION"
      ? "Recepcion"
      : worker.cargo === "MEDICO"
        ? "Medico"
        : worker.cargo === "TENS"
          ? "TENS"
          : "Sin cargo";
const isTens = worker.cargo === "TENS";
const isNurse =
  (worker.cargo === "MEDICO" && specialtyName === "Enfermeria") || isTens;
const isDoctor = worker.cargo === "MEDICO";
const isReception = worker.cargo === "RECEPCION";
const isAdmin = user.isAdmin || worker.cargo === "ADMIN";

type WorkerOption = {
  title: string;
  description: string;
  href?: string;
};

const defaultOptions: WorkerOption[] = [
  {
    title: "Consultar agenda",
    description: "Visualiza las reservas asignadas para organizar tus atenciones del dia.",
  },
  {
    title: "Registrar actividad",
    description: "Ingresa notas y observaciones de tus atenciones para mantener la ficha actualizada.",
  },
  {
    title: "Canal de soporte",
    description: "Contacta al equipo administrativo para resolver dudas o requerimientos.",
    href: "mailto:admin@cesfam.cl",
  },
];

const optionsBySpecialty: Record<string, WorkerOption[]> = {
  Administracion: [
    {
      title: "Panel administrativo",
      description: "Accede a indicadores generales y configuraciones administrativas.",
      href: "/admin",
    },
    {
      title: "Gestionar trabajadores",
      description: "Crea cuentas nuevas y administra especialidades del equipo.",
      href: "/admin/trabajadores",
    },
    {
      title: "Reportes y contenido",
      description: "Supervisa informacion publica y proximos comunicados.",
      href: "/admin/contenido",
    },
  ],
  "Medicina General": [
    {
      title: "Pacientes con hora reservada",
      description: "Ve todos los pacientes que tienes asignados para el dia de hoy y realizar consulta.",
      href: "/trabajador/reservas-dia",

    },
  ],
  Enfermeria: [
    {
      title: "Emergencias",
      description: "Revisa ingresos de emergencia registrados por recepcion.",
      href: "/trabajador/emergencias",
    },
  ],
  Kinesiologia: [
    {
      title: "Plan de rehabilitacion",
      description: "Gestiona los ejercicios y avances de cada paciente.",
    },
    {
      title: "Controles programados",
      description: "Confirma asistencia y prepara registro de progreso.",
    },
    {
      title: "Coordinacion con medicos",
      description: "Comparte reportes con el equipo tratante.",
    },
  ],
  Nutricion: [
    {
      title: "Plan alimenticio",
      description: "Actualiza pautas nutricionales y recordatorios.",
    },
    {
      title: "Seguimiento antropometrico",
      description: "Mantiene registro de los parametros de control.",
    },
    {
      title: "Material educativo",
      description: "Comparte recomendaciones y guias para pacientes.",
    },
  ],
};

const specialtyOptions = isTens
  ? optionsBySpecialty.Enfermeria
  : optionsBySpecialty[specialtyName] ?? defaultOptions;
let toolsOptions: WorkerOption[] = isReception
  ? [
      {
        title: "Busqueda de pacientes",
        description: "Consulta reservas ingresando el RUT.",
        href: "/trabajador/recepcion",
      },
      {
        title: "Emergencia",
        description: "Registra datos basicos en caso de urgencias en ventanilla.",
        href: "/trabajador/recepcion/emergencia",
      },
    ]
  : specialtyOptions;

if (isDoctor) {
  if (specialtyName === "Enfermeria") {
    toolsOptions = optionsBySpecialty.Enfermeria;
  } else {
    const patientOptionIndex = toolsOptions.findIndex(
      (item) => item.title === "Pacientes con hora reservada",
    );
    const patientOption =
      patientOptionIndex >= 0 ? toolsOptions.splice(patientOptionIndex, 1)[0] : null;

    toolsOptions = [
      ...(patientOption ? [patientOption] : []),
      {
        title: "Agenda personal",
        description: "Consultar todas las horas reservadas que tienes",
        href: "/trabajador/consultas",
      },
      ...toolsOptions,
    ];
  }
}

if (isTens) {
  toolsOptions = [
    {
      title: "Preingreso",
      description: "Ingresa al panel de preingresos para recepcionar y preparar a los pacientes del día.",
      href: "/trabajador/preingreso",
    },
  ];
}

const workerFullName = [
  worker.primer_nombre_trabajador,
  worker.segundo_nombre_trabajador,
  worker.apellido_p_trabajador,
  worker.apellido_m_trabajador,
]
  .filter(Boolean)
  .join(" ");
---

<Layout title="Espacio del trabajador">
  <section class="bg-gradient-to-b from-[#f4f1fb] to-[#e9e2ff] py-12">
    <div class="mx-auto flex max-w-5xl flex-col gap-8 px-4 sm:px-6">
      <header class="rounded-3xl bg-[#200934] px-6 py-8 text-white shadow-xl">
        <p class="text-sm uppercase tracking-[0.35em] text-white/70">Equipo</p>
        <h1 class="mt-3 text-3xl font-bold">Bienvenido, {worker.primer_nombre_trabajador}</h1>
        <p class="mt-2 text-white/80">
          Cargo: <span class="font-semibold text-white">{cargoLabel}</span>
          {worker.cargo === "MEDICO" && (
            <>
              {" "}
              · Especialidad: <span class="font-semibold text-white">{specialtyName}</span>
            </>
          )}
        </p>
        <p class="mt-1 text-white/70">Estado actual: <span class="font-semibold text-white">{worker.estado_trabajador}</span></p>
        
      </header>

      <section class="grid gap-6 md:grid-cols-3">
        <article class="rounded-3xl bg-white p-6 shadow-lg md:col-span-2">
          <h2 class="text-xl font-semibold text-[#200934]">Tus herramientas</h2>
          <p class="mt-1 text-sm text-[#200934]/70">
            {isAdmin ? 'Accesos rapidos de administracion.' : 'Opciones disponibles para tu especialidad.'}
          </p>

          {isAdmin ? (
            <div class="mt-5 space-y-3">
              <a
                href="/admin/trabajadores"
                class="flex items-center justify-between rounded-2xl border border-[#200934]/10 bg-[#f7f4ff] px-4 py-3 text-sm font-semibold text-[#200934] shadow-sm transition hover:border-[#200934]/30 hover:bg-white"
              >
                <span>Administrar equipo y especialidades</span>
                <span class="text-xs font-semibold text-[#321355]">Abrir</span>
              </a>
              <a
                href="/admin"
                class="flex items-center justify-between rounded-2xl border border-[#200934]/10 bg-[#f7f4ff] px-4 py-3 text-sm font-semibold text-[#200934] shadow-sm transition hover:border-[#200934]/30 hover:bg-white"
              >
                <span>Ir al panel administrativo</span>
                <span class="text-xs font-semibold text-[#321355]">Abrir</span>
              </a>
            </div>
          ) : (
            <ul class="mt-5 space-y-4">
              {toolsOptions.map((option) => (
                <li class="rounded-2xl border border-[#200934]/10 p-4">
                  <div class="flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
                    <div>
                      <p class="text-base font-semibold text-[#200934]">{option.title}</p>
                      <p class="text-sm text-[#200934]/70">{option.description}</p>
                    </div>
                    {option.href ? (
                      <a
                        href={option.href}
                        class="inline-flex items-center rounded-2xl bg-[#321355] px-4 py-2 text-sm font-semibold text-white transition hover:bg-[#200934]"
                      >
                        Abrir
                      </a>
                    ) : (
                      <span class="inline-flex items-center rounded-2xl bg-[#200934]/10 px-4 py-2 text-xs font-semibold uppercase tracking-wide text-[#200934]/70">
                        Proximamente
                      </span>
                    )}
                  </div>
                  {/* badges removidas */}
                </li>
              ))}
            </ul>
          )}
        </article>

        <aside class="rounded-3xl bg-white p-6 shadow-lg">
          <h2 class="text-xl font-semibold text-[#200934]">Tu perfil</h2>
          <dl class="mt-3 space-y-3 text-sm text-[#200934]/80">
            <div>
              <dt class="font-semibold text-[#200934]">Nombre</dt>
              <dd>{workerFullName}</dd>
            </div>
            <div>
              <dt class="font-semibold text-[#200934]">RUT</dt>
              <dd>{worker.rut_trabajador}</dd>
            </div>
            <div>
              <dt class="font-semibold text-[#200934]">Correo</dt>
              <dd>{worker.correo_trabajador}</dd>
            </div>
            <div>
              <dt class="font-semibold text-[#200934]">Telefono</dt>
              <dd>{worker.celular_trabajador}</dd>
            </div>
            <div>
              <dt class="font-semibold text-[#200934]">Direccion</dt>
              <dd>{worker.direccion_trabajador}</dd>
            </div>
          </dl>
          <p class="mt-4 rounded-2xl bg-[#f4f1fb] px-4 py-3 text-xs text-[#200934]/70">
            Para actualizar tus datos, comunicate con administración.
          </p>
        </aside>
      </section>
    </div>
  </section>
</Layout>
